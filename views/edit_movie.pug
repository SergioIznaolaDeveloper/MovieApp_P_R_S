include ./header.pug 
div.separador_up
main.searchone__container
    img.searchone__bg__img(src="/assets/form_bg.jpg")
    section.searchone__section
        p.searchone__title=`${films.title}`
        img.searchone__img(src=`${films.poster}`)
    form.edit__info__section(action=`/edit/${films.title}` method="POST")
        p.edit__title Now you can change the params...
        div.two__inputs
            p.edit__type Year
            p.edit__type Type
        div.two__inputs
            input.edit__input__year(name="year",type="text", placeholder=`${films.year}`)
            input.edit__input__type(name="type",type="text", placeholder=`${films.type}`)
        div.two__inputs
            p.edit__type Genre
            p.edit__type Duration
        div.two__inputs
            input.edit__input__genre(name="genre",type="text", placeholder=`${films.genre}`)
            input.edit__input__duration(name="duration",type="text", placeholder=`${films.runtime}`)
        p.searchone__type Director
        input.edit__input__director(name="director",type="text", placeholder=`${films.director}`)
        p.searchone__type Cast
        input.edit__input__cast(name="cast",type="text", placeholder=`${films.cast}`)
        text.searchone__type Resume
        textarea.edit__input__resume(name="resume", cols="30", rows="10") 
        div.two__inputs
            p.edit__type Rating
            p.edit__type Image URL
        div.two__inputs
            input.edit__input__rating(name="rating",type="text", placeholder=`${films.rating}`)
            input.edit__input__rating(name="url",type="text", placeholder=`${films.url}`)
        div.searchone__botton__container
            button.edit__button(type="submit") SAVE CHANGES 
            a.deleteFavorites(href=`/edit/${films.title}`)
                img.reset__button(type="img",src="/assets/reset.png")
    a.favorites__link(href="http://localhost:3000/mymovies")
        button.gofavorites__button(type="click") MY MOVIES
    