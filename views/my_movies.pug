include ./header.pug 
div.separador_up
div.search__flex
    each val in films.Search
        main.search__container
            img.search__bg__img(src="/assets/form_bg.jpg")
            section.films__section
                p.search__title= val.Title.toUpperCase()
                p.search__year= `${val.Year} / ${val.Type.toUpperCase()}`
                img.search__img(src=`${val.Poster}`)
                div.search__botton__container
                    a(href="http://localhost:3000/searchone/"+val.Title)
                        button.viewMore__button(type="click") VIEW TITLE
                    button.deleteFavorites(type="click")
                        img.deleteFavorites__button(type="img",src="/assets/delete_hover.png")
div.separador_down
a.favorites__link(href="http://localhost:3000/dashboard")
    button.gofavorites__button(type="click") BACK HOME